<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegVetActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Sign up"
        android:layout_gravity="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:hint="User Name "
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:id="@+id/editUserNameVetReg"
        android:textSize="20sp"
        />

    <EditText
        android:hint="Password "
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:maxLength="8"
        android:id="@+id/editPassVetReg1"
        android:textSize="20sp"
        />
    <EditText
        android:hint="Confirm Password "
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:maxLength="8"
        android:id="@+id/editPassVetReg2"
        android:textSize="20sp"
        />

    <EditText
        android:hint="Phone Number"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:inputType="phone"
        android:maxLength="10"
        android:id="@+id/editPhoneNumVetReg2"
        android:textSize="20sp"
        />

    <EditText
        android:hint="Email "
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:id="@+id/editEmailVetReg"
        android:textSize="20sp"
        />
    <EditText
        android:hint="Address "
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:id="@+id/editAddressVetReg"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btnSUVet"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sign up"
        android:textSize="15dp" />





</LinearLayout>